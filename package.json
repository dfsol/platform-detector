{
  "name": "@dfsol/platform-detector",
  "version": "0.4.0",
  "description": "Universal platform detector for web, PWA, Telegram Mini Apps, and native mobile applications with Client Hints API, feature detection, and enhanced accuracy",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./svelte": {
      "types": "./dist/svelte/index.d.ts",
      "svelte": "./dist/svelte/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && mkdir -p dist/svelte && cp src/svelte/*.svelte dist/svelte/ && cp src/svelte/*.ts dist/svelte/",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "bun run build",
    "prepublishOnly": "bun run build",
    "postinstall": "bun run build || true"
  },
  "keywords": [
    "platform",
    "detector",
    "pwa",
    "twa",
    "telegram",
    "tma",
    "tma.js",
    "capacitor",
    "capacitorjs",
    "mobile",
    "ios",
    "android",
    "chromeos",
    "web",
    "device-detection",
    "telegram-mini-app",
    "trusted-web-activity",
    "sdk",
    "client-hints",
    "user-agent-client-hints",
    "feature-detection",
    "browser-detection",
    "os-detection"
  ],
  "author": "DFSOL",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dfsol/platform-detector"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "@tma.js/sdk": "^2.0.0 || ^3.0.0"
  },
  "peerDependenciesMeta": {
    "svelte": {
      "optional": true
    },
    "@tma.js/sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vitest/ui": "^4.0.8",
    "happy-dom": "^20.0.10",
    "svelte": "^5.39.5",
    "typescript": "^5.9.2",
    "vitest": "^4.0.8"
  }
}
